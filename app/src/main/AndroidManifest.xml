<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danielburgnerjr.popularmovies">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:label="MovieDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <provider
            android:authorities="com.danielburgnerjr.popularmovies"
            android:name="com.danielburgnerjr.popularmovies.data.PopularMoviesContentProvider"
            android:exported="false"
            />
    </application>

</manifest>